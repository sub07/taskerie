// Static tasks configuration.
//
// Example:
[
  {
    "label": "run r",
    "command": "cargo",
    "args": ["run"],
    // "env": {
    //   "RUST_BACKTRACE": "1"
    // },
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "reveal_target": "dock",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "run t",
    "command": "cargo",
    "args": ["test"]
  },
  {
    "label": "run c",
    "command": "cargo",
    "args": ["check"]
  }
]
